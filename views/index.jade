extends layout

block body
    div(ng-controller='AppCtrl as ctrl')

        div#slides(ng-if="ctrl.viewMode == ctrl.mode.slides")
            uib-carousel(interval="8000")
                //uib-slide(class="picSlide")
                    img(src="/media/501.gif")
                    div(class="carousel-caption")
                        | test slide
                //uib-slide(class="picSlide")
                    img(src="/media/rebel.png")
                    div(class="carousel-caption")
                        | test 1 slide
                uib-slide(ng-repeat="slide in ctrl.slides", class="picSlide")
                    img(src="{{slide.src}}", style="margin:auto;")
                    div(class="carousel-caption")
                        | {{slide.caption}}
            button(ng-click="ctrl.viewMode = ctrl.mode.signup") To Signup
        div(ng-if="ctrl.viewMode == ctrl.mode.signup")
            | signup
            button(ng-click="ctrl.viewMode = ctrl.mode.admin") To Admin
        div(ng-if="ctrl.viewMode == ctrl.mode.admin")
            | admin
            button(ng-click="ctrl.viewMode = ctrl.mode.slides") To Slides
        pre {{ctrl|json}}


        div#footer
            | Angular seed app: v
            span(app-version)

    script(src='js/lib/1-3/angular.js')
    script(src='js/lib/1-3/angular-animate.js')
    script(src='js/lib/1-3/ui-bootstrap-tpls-0.14.3.min.js')
    //script(src='js/lib/1-3/angular-route.js')
    //script(src='js/lib/angular-animate/angular-animate.js')
    //script(src='js/lib/angular-route/angular-route.js')
    //script(src='js/lib/ui-bootstrap-tpls.js')
    script(src='js/app.js')
    script(src='js/services.js')
    script(src='js/controllers.js')
    script(src='js/filters.js')
    script(src='js/directives.js')
